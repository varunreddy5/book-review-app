<h2 class = "current-category"><%= params[:category] %></h2>
<% if @books.count == 0 %>
  <h2>There are no books in this category!</h2>
<% else %>
  <div class="row">
      <% @books.each do |book| %>
        <div class="col-md-3">
          <%= link_to image_tag(book.book_img.url(:book_index)), book_path(book) %>
        </div>
      <% end %>
  </div>
<% end %>
