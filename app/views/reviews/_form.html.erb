<%= simple_form_for([@book, @book.reviews.build]) do |f| %>
  <div class="rating-form">
    <label> Rating </label>
  </div>
  <%= f.input :comment %>
  <%= f.button :submit, :class => "btn-custom2" %>
<% end %>
<script type="text/javascript">
  $('.rating-form').raty({
    path: '/assets/',
    scoreName: 'review[rating]'
  });
</script>
